<div class="hero is-medium">
  <div class="heading">
    <h1 class="title is-1 has-text-centered">Register your Coffee shop</h1>
  </div>
  <div class="hero-body is-centered">
    <div class="card">
      <div class="card-content">
        <label class="label">Name of coffee shop</label>
        <p class="control">
          <input class="input" type="text" placeholder="Name of coffee shop">
        </p>
        <label class="label">Short description of your shop</label>
        <p class="control">
          <textarea class="textarea" placeholder="description"></textarea>
        </p>
        <label class="label">Image of your coffee shop</label>
        <p class="control">
          <input class="input" type="text" placeholder="url">
        </p>
        <label class="label">Address</label>
        <p class="control">
          <input class="input" type="text" placeholder="Address">
        </p>
        <label class="label">City</label>
        <p class="control">
          <input class="input" type="text" placeholder="City">
        </p>
        <label class="label">State</label>
        <p class="control">
          <input class="input" type="text" placeholder="State">
        </p>
        <label class="label">zip/postal Code</label>
        <p class="control">
          <input class="input" type="text" placeholder="zip/postal code">
        </p>
        <label class="label">Phone Number</label>
        <p class="control">
          <input class="input" type="text" placeholder="Phone Number">
        </p>
      </div>
      <div class="card-footer">
        <button class="card-footer-item">Submit</button>
      </div>
    </div>
  </div>
</div>
