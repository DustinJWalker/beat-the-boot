<div class="hero is-medium">
  <div class="heading">
    <h1 class="title is-1 has-text-centered">Beat the Boot</h1>
  </div>
  <div class="hero-body is-centered">
    {{#simple-form onsubmit=(action "login") class="card" as |formValues|}}
      <div class="card-content">
        <h1 class="title has-text-centered">Login</h1>
        <label class="label">Email</label>
        <p class="control">
          {{input class="input" type="text" placeholder="Email" value=formValues.email}}
        </p>
        <label class="label">Password</label>
        <p class="control">
          {{input class="input" type="password" placeholder="Password" value=formValues.password}}
        </p>
        <p class="control">
        </p>
      </div>
      <div class="card-footer">

        {{#link-to "register" class="card-footer-item"}} Register {{/link-to}}
        <button class="card-footer-item">Login</button>
      </div>
    {{/simple-form}}
  </div>
</div>
