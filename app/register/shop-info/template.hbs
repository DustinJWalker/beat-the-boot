<div class="hero is-medium">
  <div class="heading">
    <h1 class="title is-1 has-text-centered">Register Your Coffee shop</h1>
  </div>
  <div class="hero-body is-centered">
    {{#simple-form onsubmit=(action "saveShop") class="card" as |formValues|}}
    <div class="card">
      <div class="card-content">
        <label class="label">Name of coffee shop</label>
        <p class="control">
          {{input class="input" type="text" placeholder="Name of Coffee Shop" value=formValues.shopName}}
        </p>
        <label class="label">Short description of your shop</label>
        <p class="control">
          {{textarea class="textarea" placeholder="Description" value=formValues.description}}
        </p>
        <label class="label">Image of your coffee shop</label>
        <p class="control">
          {{input class="input" type="text" placeholder="Image of Your Coffee Shop" value=formValues.shopUrl}}
        </p>
        <label class="label">Address</label>
        <p class="control">
          {{input class="input" type="text" placeholder="Address" value=formValues.address}}
        </p>
        <label class="label">City</label>
        <p class="control">
          {{input class="input" type="text" placeholder="City" value=formValues.city}}
        </p>
        <label class="label">State</label>
        <p class="control">
          {{input class="input" type="text" placeholder="State" value=formValues.state}}
        </p>
        <label class="label">zip/postal Code</label>
        <p class="control">
          {{input class="input" type="text" placeholder="Zip/Postal Code" value=formValues.zip}}
        </p>
        <label class="label">Phone Number</label>
        <p class="control">
          {{input class="input" type="text" placeholder="Phone Number" value=formValues.phoneNumber}}
        </p>
      </div>
      <div class="card-footer">
        <button class="card-footer-item">Submit</button>
      </div>
    </div>
    {{/simple-form}}
  </div>
</div>
