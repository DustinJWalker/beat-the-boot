<div class="hero is-medium">
  <div class="heading">
    <h1 class="title is-1 has-text-centered">Beat the Boot</h1>
  </div>
  <div class="hero-body is-centered">
    {{#simple-form onsubmit=(action "saveUser") class="card" as |formValues|}}
      <div class="card-content">
        <h1 class="title has-text-centered">Register</h1>
        <label class="label">First Name</label>
        <p class="control">
          <input class="input" type="text" placeholder="First Name">
        </p>

        <label class="label">Email</label>
        <p class="control">
          {{input class="input" type="text" placeholder="Email" value=formValues.email}}
        </p>
        <label class="label">Password</label>

        <p class="control">
          {{input class="input" type="password" placeholder="Password" value=formValues.password}}
        </p>
        <label class="label">Who are You?</label>
        <p class="control">
          <span class="select">
         <select>
           <option>Select</option>
           <option>coffee drinker</option>
           <option>coffee shop owner</option>
         </select>
        </span>
        </p>
      </div>
      <div class="card-footer">
        {{#link-to "login" class="card-footer-item"}}Already have an account?{{/link-to}}
        <button class="card-footer-item">Submit</button>
      </div>
    {{/simple-form}}
  </div>
</div>
