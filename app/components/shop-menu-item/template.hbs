<div class="level-left">
  <div class="level-item">
    <p class="title is-5">{{drink.name}}</p>
  </div>

  <div class="level-item">
    <p class="subtitle is-5">{{drink.description}}</p>
  </div>
</div>

<div class="level-right">
  <div class="level-item">
    <p class="title is-5">${{drink.price}}</p>
  </div>
  <div class="level-item">
    <p class="qty">
      {{#power-select options=quantities selected=quantitySelected placeholder="Qty" onchange=(action (mut quantitySelected)) as |quantity|}}
        {{quantity}}
      {{/power-select}}
    </p>
  </div>

  <div class="level-item">
    <a class="button is-info" {{action "addToCart"}}>Add</a>
  </div>
</div>
