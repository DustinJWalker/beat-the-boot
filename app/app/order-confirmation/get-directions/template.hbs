<div class="modal is-active">
  <div class="modal-background"></div>
  <div class="modal-card">
    <header class="modal-card-head">
      <p class="modal-card-title has-text-centered">Your Directions</p>
      {{#link-to "app.shops"}}
        <button class="delete"></button>
      {{/link-to}}

    </header>
    <section class="modal-card-body">
      <div class="body">
        <iframe width="625" height="450" frameborder="0" style="border:0" src="https://www.google.com/maps/embed/v1/directions?origin=Current%20Location&destination={{model.shop.address}}&key=AIzaSyA5D_Id3AxIjerACjWPfEPmdXqzesfi14M" allowfullscreen></iframe>
        <a href="https://www.google.com/maps/dir//{{ model.shop.address }}" target="_blank" class="button is-fullwidth is-primary">See On Google</a>
        {{!-- {{#leaflet-map class="map" lat=lat lng=lng zoom=zoom}}

        {{tile-layer url="http://{s}.basemaps.cartocdn.com/light_all/{z}/{x}/{y}.png" }}

          {{#marker-layer location=emberConfLocation}}
            {{#popup-layer}}
              <h3>The Oregon Convention Center</h3> 777 NE Martin Luther King Jr Blvd<br> Portland, OR 97232
            {{/popup-layer}}
          {{/marker-layer}}

          {{#marker-layer location=hotel}}
            {{#popup-layer}}
              <h3>Hotel</h3>
            {{/popup-layer}}
          {{/marker-layer}}

          {{/leaflet-map}} --}}
      </div>
    </section>
    <footer class="modal-card-foot">
      <div class="level level-space-between">
        <div class="level-item level-right is-pulled-right">
          <a class="button button--large is-info">
            Find Parking
          </a>

        </div>
      </div>
    </footer>
  </div>
</div>
