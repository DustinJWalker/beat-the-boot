<article class="message is-success">
  <div class="message-header">
    Your Order is Complete!
  </div>
  <div class="message-body">
    <h4 class="subtitle">Order Details</h4>


    <table class="table" style="background: inherit;">
      <thead>
        <tr>
          <th>Name</th>
          <th>Price</th>
          <th>Qty</th>
          <th>Total Price</th>
        </tr>
      </thead>
      <tbody>
        {{#each model.lineItems as |lineItem|}}
          <tr>
            <td>{{lineItem.drink.name}}</td>
            <td>${{lineItem.drink.price}}</td>
            <td>{{lineItem.quantity}}</td>
            <td>${{mult lineItem.quantity lineItem.drink.price}}</td>
          </tr>
        {{/each}}
        <tr>
          <td></td>
          <td></td>
          <td>Tax:</td>
          <td>${{format-number (mult (price-total model.lineItems) 0.0925) presicion=2}}</td>
        </tr>
        <tr>
          <td></td>
          <td></td>
          <td>Total:</td>
          <td>${{price-total model.lineItems}}</td>
        </tr>
      </tbody>
      {{!-- <thead>
           <tr>
             <th>Price</th>
           </tr>
         </thead>
         <tbody>
           <tr>
             <td>{{lineItem.drink.price}}</td>
      </tr>
      </tbody> --}}
    </table>
  </div>
</article>
