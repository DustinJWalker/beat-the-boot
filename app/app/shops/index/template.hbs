<div class="hero hero--adjust">
  <div class="section">
    <div class="control is-grouped control-is-align">
      <div class="control is-expanded">
        <h1 class="title">Beat the Boot</h1>
      </div>
      <div class="control is-negative-margin">
         {{#link-to "login" class="button button--large is-info" }}logout{{/link-to}}
      </div>
    </div>
  </div>
  <div class="columns is-multiline">
    <div class="column is-12 is-no-padding">
      <p class="control has-icon has-icon-left">
        <input class="input">
        <i class="fa fa-search"></i>
      </p>
    </div>
    {{#each model as |shop|}}
      {{#link-to "app.shops.menu" shop class="column is-12 is-no-padding"}}
        {{shop-header shop=shop}}
      {{/link-to}}
    {{/each}}
  </div>
</div>
